[Unit]
Description=Kubernetes Scheduler

[Service]
WorkingDirectory=/var/lib/kubernetes/scheduler
ExecStart=/opt/bin/kube-scheduler \
    --address=127.0.0.1 \
    --master=http://127.0.0.1:8080 \
    --leader-elect=true \
    --logtostderr=true \
    --v=2
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
